<section class="news-slider">
    <div class="page__center">
        <div class="page__inner">
            
            <div class="news-slider__center">

                <h3 class="page__label news-slider__label">Другие новости</h3>
                
                <div class="page__col-main">

                    <div class="news-slider__content">
                        <div class="swiper-container js-news-slider">
                            <div class="swiper-wrapper">
                                {{#repeat 2}}
                                <div class="swiper-slide">
                                    <a href="#" class="news-slider__card">
                                       <span class="news-slider__card-title">
                                           Социальный регистр населения от «БАРС Груп» победил во всероссийском конкурсе
                                       </span>
                                       <time class="news-slider__card-date"
                                        datetime="2019-01-17">17
                                        января 2019</time>
                                    </a>
                                </div>
                                <div class="swiper-slide">
                                    <a href="#" class="news-slider__card news-slider__card--with-image">
                                       <span class="news-slider__card-title">
                                           Социальный регистр населения от «БАРС Груп» победил во всероссийском конкурсе
                                       </span>
                                       <time class="news-slider__card-date"
                                        datetime="2019-01-17">17
                                        января 2019</time>
                                        <span class="news-slider__card-image-container">
                                            <img src="img/news-details-slider/slide-image.jpg" alt="Изображение слайда" class="news-slider__card-image">
                                        </span>
                                        
                                    </a>
                                </div>
                                
                                {{/repeat}}
                            </div>

                        </div>

                    </div>

                    <div class="slider-nav slider-nav--bottom">
                        <button type="button" class="js-news-slider--prev"></button>
                        <button type="button" class="js-news-slider--next"></button>
                    </div>
                    
                </div>

            </div>

        </div>
    </div>
</section>